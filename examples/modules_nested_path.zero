// 测试嵌套模块的路径访问

mod math {
    pub fn add(a: int, b: int) -> int {
        return a + b;
    }

    mod geometry {
        pub fn area(r: int) -> int {
            return r * r;
        }

        pub fn perimeter(r: int) -> int {
            return 2 * r;
        }
    }
}

// 测试一级路径
let sum: int = math::add(15, 25);
print(sum);  // 40

// 测试二级路径（嵌套模块）
let a: int = math::geometry::area(5);
print(a);  // 25

let p: int = math::geometry::perimeter(10);
print(p);  // 20
