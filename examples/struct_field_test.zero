// 测试结构体字段访问和赋值（验证字段索引是否正确）

struct Point {
    x: int,
    y: int
};

struct Person {
    name: string,
    age: int,
    height: int
};

print("=== 测试结构体字段访问 ===");

// 测试 Point 结构体
var p = Point { x: 10, y: 20 };
print("Point.x = ");
print(p.x);  // 应该输出 10，不是 20
print("Point.y = ");
print(p.y);  // 应该输出 20

// 测试字段赋值
p.x = 100;
p.y = 200;
print("\n修改后:");
print("Point.x = ");
print(p.x);  // 应该输出 100
print("Point.y = ");
print(p.y);  // 应该输出 200

// 测试 Person 结构体（3个字段）
var person = Person { name: "Alice", age: 25, height: 170 };
print("\n=== 测试 Person 结构体 ===");
print("Name: ");
print(person.name);  // 应该输出 "Alice"
print("Age: ");
print(person.age);   // 应该输出 25
print("Height: ");
print(person.height); // 应该输出 170

// 修改中间字段
person.age = 26;
print("\n修改 age 后:");
print("Age: ");
print(person.age);   // 应该输出 26

// 确认其他字段未受影响
print("Name (应该不变): ");
print(person.name);  // 应该仍然是 "Alice"
print("Height (应该不变): ");
print(person.height); // 应该仍然是 170

print("\n=== 测试完成 ===");
